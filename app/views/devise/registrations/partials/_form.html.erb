<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
  <div>
    <%= f.label :email, "Email", class: "block text-sm font-medium leading-6 text-gray-900" %>
    <div class="mt-2">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", 
          placeholder: "seu@email.com",
          class: "block w-full rounded-md border-0 py-1.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
    </div>
    <p class="mt-1 text-xs text-gray-500">Seu endereço de email será usado para login e comunicações</p>
  </div>
  
  <div>
    <%= f.label :password, "Senha", class: "block text-sm font-medium leading-6 text-gray-900" %>
    <div class="mt-2">
      <%= f.password_field :password, autocomplete: "new-password", 
          placeholder: "••••••••",
          class: "block w-full rounded-md border-0 py-1.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
      <% if @minimum_password_length %>
        <p class="mt-1 text-xs text-gray-500">Mínimo de <%= @minimum_password_length %> caracteres</p>
      <% end %>
    </div>
  </div>
  
  <div>
    <%= f.label :password_confirmation, "Confirmar senha", class: "block text-sm font-medium leading-6 text-gray-900" %>
    <div class="mt-2">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", 
          placeholder: "••••••••",
          class: "block w-full rounded-md border-0 py-1.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
    </div>
  </div>
  
  <div>
    <%= f.submit "Criar conta", class: "flex w-full justify-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
  </div>
  
  <div>
    <%= render "devise/shared/links" %>
  </div>
<% end %>