<div class="mx-auto max-w-7xl px-6 lg:px-8 mt-16 mb-24 relative">
  <div class="relative mx-auto max-w-7xl px-6 lg:px-8 mb-10">
    <div class="mx-auto max-w-2xl mb-12">
      <div class="flex items-center space-x-3">
        <div class="flex-shrink-0 h-12 w-12 rounded-full bg-gradient-to-r from-indigo-500 to-purple-600 flex items-center justify-center shadow-lg">
          <i class="fas fa-code text-white text-xl"></i>
        </div>
        <div>
          <h1 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">Dados do Desenvolvedor</h1>
          <p class="text-lg text-gray-600">Gerencie suas dados de perfil.</p>
        </div>
      </div>
    </div>

    <div class="mx-auto max-w-2xl bg-white p-8 rounded-2xl shadow-xl ring-1 ring-gray-200 transition-all hover:shadow-2xl">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div>
          <div class="flex items-center">
            <i class="fas fa-envelope text-indigo-600 mr-2"></i>
            <%= f.label :email, class: "block text-sm font-medium leading-6 text-gray-900" %>
          </div>
          <div class="mt-2">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", 
                class: "block w-full rounded-lg border-0 py-2 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-200 placeholder:text-gray-400 sm:text-sm sm:leading-6 transition-all" %>
          </div>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="rounded-lg bg-blue-50 p-4 ring-1 ring-blue-100">
            <div class="flex items-center">
              <i class="fas fa-info-circle text-blue-600 mr-2 mt-1"></i>
              <div class="ml-3 flex-1 md:flex md:justify-between">
                <p class="text-sm text-blue-700">Aguardando confirmação para: <%= resource.unconfirmed_email %></p>
              </div>
            </div>
          </div>
        <% end %>

        <div class="relative">
          <div class="absolute inset-0 flex items-center" aria-hidden="true">
            <div class="w-full h-px bg-gray-100"></div>
          </div>
          <div class="relative flex justify-start">
            <span class="bg-white pr-3 text-base font-semibold leading-6 text-indigo-600 pl-2">Alterar senha</span>
          </div>
          <p class="mt-1 text-sm leading-6 text-gray-500">Deixe em branco se não quiser alterar sua senha.</p>
        </div>

        <div>
          <div class="flex items-center">
            <i class="fas fa-lock text-indigo-600 mr-2"></i>
            <%= f.label :password, "Nova senha", class: "block text-sm font-medium leading-6 text-gray-900" %>
          </div>
          <div class="mt-2">
            <%= f.password_field :password, autocomplete: "new-password", 
                class: "block w-full rounded-lg border-0 py-2 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-200 placeholder:text-gray-400 sm:text-sm sm:leading-6 transition-all" %>
            <% if @minimum_password_length %>
              <p class="mt-2 text-sm text-gray-500"><i class="fas fa-info-circle mr-1"></i>Mínimo de <%= @minimum_password_length %> caracteres</p>
            <% end %>
            <div class="mt-4">
              <%= f.button "Salvar senha", type: "submit", class: "inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
            </div>
          </div>
        </div>

        <div>
          <div class="flex items-center">
            <i class="fas fa-shield-alt text-indigo-600 mr-2"></i>
            <%= f.label :password_confirmation, "Confirmar nova senha", class: "block text-sm font-medium leading-6 text-gray-900" %>
          </div>
          <div class="mt-2">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", 
                class: "block w-full rounded-lg border-0 py-2 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-200 placeholder:text-gray-400 sm:text-sm sm:leading-6 transition-all" %>
          </div>
        </div>

        <div class="relative">
          <div class="absolute inset-0 flex items-center" aria-hidden="true">
            <div class="w-full h-px bg-gray-100"></div>
          </div>
          <div class="relative flex justify-start">
            <span class="bg-white pr-3 text-base font-semibold leading-6 text-indigo-600 pl-2">Confirmar alterações</span>
          </div>
        </div>

        <div>
          <div class="flex items-center">
            <i class="fas fa-key text-indigo-600 mr-2"></i>
            <%= f.label :current_password, "Senha atual", class: "block text-sm font-medium leading-6 text-gray-900" %>
          </div>
          <div class="mt-2">
            <%= f.password_field :current_password, autocomplete: "current-password", 
                class: "block w-full rounded-lg border-0 py-2 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-200 placeholder:text-gray-400 sm:text-sm sm:leading-6 transition-all" %>
            <p class="mt-2 text-sm text-gray-500"><i class="fas fa-exclamation-circle mr-1"></i>Precisamos da sua senha atual para confirmar as alterações</p>
          </div>
        </div>

        <div class="flex items-center justify-end mt-8 gap-x-6">
          <%= f.submit "Atualizar perfil", class: "rounded-lg bg-gradient-to-r from-indigo-600 to-indigo-800 px-4 py-2.5 text-sm font-semibold text-white shadow-md hover:from-indigo-500 hover:to-indigo-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 transition-all hover:shadow-lg" %>
        </div>
      <% end %>

      <div class="relative mt-10">
        <div class="absolute inset-0 flex items-center" aria-hidden="true">
          <div class="w-full h-px bg-gray-100"></div>
        </div>
        <div class="relative flex justify-start">
          <span class="bg-white pr-3 text-base font-semibold leading-6 text-red-600 pl-2">Zona de perigo</span>
        </div>
        <div class="mt-4 rounded-lg bg-red-50 p-4 ring-1 ring-red-100">
          <div class="flex">
            <i class="fas fa-exclamation-triangle text-red-600 mr-2 mt-1"></i>
            <p class="text-sm text-red-700">Ao excluir sua conta, todos os seus dados serão permanentemente removidos.</p>
          </div>
        </div>
        <div class="mt-5">
          <%= button_to "Excluir minha conta", registration_path(resource_name), data: { confirm: "Tem certeza?", turbo_confirm: "Tem certeza?" }, method: :delete, class: "rounded-lg bg-white ring-1 ring-red-200 px-3 py-2 text-sm font-semibold text-red-600 shadow-sm hover:bg-red-50 hover:text-red-700 transition-all" %>
        </div>
      </div>
    </div>
  </div>
</div>
